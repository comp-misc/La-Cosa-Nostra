{
	"compilerOptions": {
		"allowJs": true,
		"module": "CommonJS",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"noImplicitOverride": true,
		"target": "ESNext",
		"lib": ["ESNext"],
		"outDir": "lib"
	},
	"include": ["source/"]
}
